#!/bin/sh
#
# Rebuilds a package tarball to the boot media

. /lib/libscript

help() {
	echo "\
Usage: $(basename "$0") <package>

$DESCRIPTION." >&2
	exit 1
}

[ "$#" != 1 -o "$1" = "-h" -o "$1" = "--help" ] && help

if [ ! -f "/var/lib/lrpkg/$1.list" ]; then
	echo "Package '$1' not found." >&2
	exit 1
fi

mt_boot || exit 1
tar czf "/boot/packages/$1.tgz" -T "/var/lib/lrpkg/$1.list" -C /
umt_boot
