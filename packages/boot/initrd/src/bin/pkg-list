#!/bin/sh
#
# Lists the installed packages or the files from a package

. /lib/libscript

help() {
	echo "\
Usage: $(basename "$0") [package]

$DESCRIPTION." >&2
	exit 1
}

if [ "$#" = 0 ]; then
	if [ "$(echo $LRPKG/*.list)" != "$LRPKG/*.list" ]; then
		for i in $LRPKG/*.list; do
			basename "$i" .list
		done
	fi
elif [ "$#" = 1 ]; then
	case "$1" in
		-h|--help) help;;
		*) [ -f "$LRPKG/$1.list" ] && cat "$LRPKG/$1.list";;
	esac
else
	help
fi
